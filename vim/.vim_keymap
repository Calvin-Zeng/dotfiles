" -------- Ctrl --------
" Save/restore the VIM session.
nnoremap <Leader><C-s> :mksession! 
nnoremap <Leader><C-r> :source 

" Convert text plain to hex and back again.
map <C-h> :%!xxd<CR>
map <C-h><C-r> :%!xxd -r<CR>

" Useful bubble text normal mapping for arrow keys.
" http://vimcasts.org/episodes/bubbling-text/
"nnoremap <C-UP> ddkP 
"nnoremap <C-DOWN> ddp
"nnoremap <C-D> Vyp
"nnoremap <C-a> <Esc>ggVG

"vnoremap <C-DOWN> xp`[V`]
"vnoremap <C-UP> xkP`[V`]
"vnoremap <C-D> Vyjp`[V`]
"vnoremap <C-a> <Esc>ggVG

" :nmap <C-c><C-c> :!gcc -Wall % -o %:r.out<CR>

" -------- Shift --------
" Use Tab to indent line
nmap <s-tab> v<

" Find & replace
map <s-f> :%s/s/re/gc

" Find & replace and increase index
map <s-f><s-p> :let i=1 \| 2,7g/search/s//\='replace'.i/gc \| let i=i+1

" Clear the search highlight.
map <s-c> :let @/ = ""<CR>

nnoremap <silent> <s-q> :tabp<CR>
nnoremap <silent> <s-w>  :tabn<CR>

" -------- Function key --------
" Insert time.
imap <F2> <C-R>=strftime("%Y/%m/%d %H:%M:%S")<CR>

" Execute command.
map <F2> :r !

"map <F4> :set hls!<BAR>set hls?<CR>

" Enable tagbar
nmap <F8> :TagbarToggle<CR>

" -------- Other --------
" Use Tab to indent line
nmap <tab> v>
